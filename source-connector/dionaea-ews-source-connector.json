{
  "name": "dionaea-ews-source-connector",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSourceConnector",
    "tasks.max": "1",
    "connection.uri": "mongodb://<user>:<pass>@<host1>:27017,<host2>:27017,<host3>:27017/?authSource=honeypot",
    "database": "honeypot",
    "collection": "dionaea_ews",
    "copy.existing": "true",
    "publish.full.document.only": "true",
    "topic.prefix": "input",
    "output.format.value": "json",
    "pipeline":
        "[{\"$match\":{
          \"operationType\":\"insert\"}},
        {\"$addFields\":{
          \"fullDocument.dst_ip\": \"$fullDocument.dest_ip\",
          \"fullDocument.dst_port\": \"$fullDocument.dest_port\"}},
        {\"$project\": {
          \"fullDocument.dest_ip\":0,
          \"fullDocument.dest_port\":0}}]",
    "producer.override.max.request.size": "10485760"
  }
}

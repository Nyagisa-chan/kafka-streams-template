{
  "name": "honeytrap-source-connector",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSourceConnector",
    "tasks.max": "1",
    "connection.uri": "mongodb://<user>:<pass>@<host1>:27017,<host2>:27017,<host3>:27017/?authSource=honeypot",
    "database": "honeypot",
    "collection": "honeytrap",
    "copy.existing": "true",
    "publish.full.document.only": "true",
    "topic.prefix": "input",
    "output.format.value": "json",
    "output.schema.infer.value": "true",
    "pipeline":
        "[{\"$match\":{
          \"operationType\":\"insert\"}},
        {\"$addFields\":{
          \"fullDocument.dst_ip\": \"$fullDocument.destination-ip\",
          \"fullDocument.src_ip\": \"$fullDocument.source-ip\",
          \"fullDocument.dst_port\": \"$fullDocument.destination-port\",
          \"fullDocument.src_port\": \"$fullDocument.source-port\"}}]",
    "producer.override.max.request.size": "10485760"
  }
}
